<div class="header">
  <div class="spacer">
    <nav>
      <ul class="navigation">
        <li<%= " class='opened'" if @nav == 'Home' %>><%= link_to 'Home', '/static/home' %></li>
        <li<%= " class='opened'" if @nav == 'Members' %>>
          <%= link_to 'Members', home_users_path %>
          <ul class="columns-1">
            <li class="column">
              <h1>Active members</h1>
              <ul>
                <li><%= link_to 'Featured', home_users_path %></li>
                <li><%= link_to 'All by name', users_path %></li>
                <% if user_signed_in? %>
                  <li><%= link_to 'My profile', user_path(current_user.id) %></li>
                <% end %>
              </ul>
            </li>
          </ul>
        </li>
        <li<%= " class='opened'" if @nav == 'Projects' %>>
          <%= link_to('Projects', home_projects_path) %>
          <ul class="columns-<%= user_signed_in? ? '2' : '1' %>">
            <li class="column">
              <h1>Active projects</h1>
              <ul>
                <li><%= link_to 'Featured', home_projects_path %></li>
                <li><%= link_to 'All by name', projects_path %></li>
              </ul>
            </li>
            <% if user_signed_in? %>
              <li class="column">
                <h1>My projects</h1>
                <ul>
                  <li><%= link_to 'Start a new project', new_project_path %></li>
                </ul>
              </li>
            <% end %>
          </ul>
        </li>
        <li<%= " class='opened'" if @nav == 'News' %>><%= link_to 'News', '/static/news' %></li>
        <li<%= " class='opened'" if @nav == 'About' %>>
          <%= link_to 'About', '/static/about' %>
