            <li class="column">
              <h1>More about us</h1>
              <ul>
                <li><%= link_to 'About .projectlodge', '/static/about' %></li>
                <li><%= link_to "Contact", '/static/contact' %></li>
                <li><%= link_to 'Privacy policy', '/static/privacy' %></li>
              </ul>
            </li>
          </ul>
        </li>
        <li class="special <%= " opened" if @nav == 'SAG2012S' %>">
          <%= link_to 'SAG 2012 Summer', '/sag2012s' %>
        </li>
      </ul>
    </nav>
    <%= link_to image_tag('logo.png', :class => 'logo'), '/static/home'  %>
